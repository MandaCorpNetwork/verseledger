{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2024",
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "#/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "incremental": true
  },
  "include": ["typings/global.d.ts", "src/**/*", "test/**/*", "bin/**/*"],
  "exclude": ["node_modules"]
}
