{
  "name": "verseledger",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "services/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -p \"[{name}]\" -n \"CLIENT,SERVER\" -c \"bgGreen.bold,bgBlue.bold\" \"manypkg run client dev\" \"manypkg run server dev\"",
    "postinstall": "preconstruct dev && manypkg check",
    "clean": "yarn manypkg exec rm -rf node_modules && manypkg exec rm -rf dist && rm -rf node_modules",
    "test": "yarn test:server && yarn test:client",
    "lint": "yarn manypkg run server lint && manypkg run client lint",
    "test:client": "yarn manypkg run client test",
    "test:server": "yarn manypkg run server test",
    "resetdb": "cd scripts && setup-local-db.bat",
    "migrate": "./.flyway/flyway -configFiles=./flyway.user.toml -environment=vl-db migrate"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.5",
    "@manypkg/cli": "^0.21.4",
    "@preconstruct/cli": "^2.8.4",
    "concurrently": "8.2.2",
    "flywaydb-cli": "^0.9.0"
  },
  "preconstruct": {
    "packages": [
      "apps/*"
    ]
  }
}
