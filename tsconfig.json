{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linter */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Pathing */
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["./*"],
      "@Assets/*": ["./Assets/*"],
      "@Redux/*": ["./Redux/*"],
      "@Routes/*": ["./Routes/*"],
      "@Utils/*": ["./Utils/*"],
      "@Common/*": ["./Common/*"],
      "@Backend/*": ["../../verseledger-backend/src/*"],
    }
  },
  "include": ["src", "tsconfig.json", "tsconfig.node.json"],
  "exclude": ["cypress", "cypress.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
